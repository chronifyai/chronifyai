{{!
    @template local_chronifyai/wizard_step4

    ChronifyAI setup wizard - Completion page (Step 4)

    Context variables:
    * step_title - The title for this step
    * dashboard_url - URL to Chronify dashboard
    * settings_url - URL to manage settings
}}

<div class="chronifyai-text-content">
    <h2 class="chronifyai-completion-title">{{step_title}}</h2>

    <p class="chronifyai-completion-description">
        {{#str}}wizard:step4:description, local_chronifyai{{/str}}
    </p>

    <div class="chronifyai-capabilities-section">
        <p class="chronifyai-capabilities-intro">{{#str}}wizard:step4:capability:intro, local_chronifyai{{/str}}:</p>
        <ul class="chronifyai-capabilities-list">
            <li>{{#str}}wizard:step4:capability1, local_chronifyai{{/str}}</li>
            <li>{{#str}}wizard:step4:capability2, local_chronifyai{{/str}}</li>
            <li>{{#str}}wizard:step4:capability3, local_chronifyai{{/str}}</li>
            <li>{{#str}}wizard:step4:capability4, local_chronifyai{{/str}}</li>
        </ul>
    </div>

    <div class="chronifyai-next-step">
        <p><strong>{{#str}}wizard:step4:nextstep, local_chronifyai{{/str}}:</strong> {{#str}}wizard:step4:nextstep:description, local_chronifyai{{/str}}</p>
    </div>

    <div class="chronifyai-completion-actions">
        <a href="{{dashboard_url}}" class="chronifyai-btn-dashboard">
            {{#str}}ui:button:dashboard, local_chronifyai{{/str}}
        </a>
        <a href="{{settings_url}}" class="chronifyai-btn-settings">
            {{#str}}ui:button:settings, local_chronifyai{{/str}}
        </a>
    </div>

    <div class="chronifyai-support-section">
        <p class="chronifyai-support-text">
            {{#str}}wizard:step4:support:text, local_chronifyai{{/str}}
            <a href="mailto:hello@chronifyai.com" class="chronifyai-support-email">hello@chronifyai.com</a>.
        </p>
    </div>
</div>