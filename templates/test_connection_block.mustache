{{!
    @template local_chronifyai/test_connection_block

    Test API connection block component.

    Context variables: none (static component)
}}

<div class="chronifyai-test-connection-section">
    <button type="button" class="chronifyai-btn-test" id="test-connection-btn">
        <i class="fa fa-plug" aria-hidden="true"></i>
        {{#str}}ui:button:testconnection, local_chronifyai{{/str}}
    </button>
    <div id="connection-result" class="chronifyai-test-status"></div>
</div>

{{#js}}
require(['local_chronifyai/connection_test'], function(ConnectionTest) {
    ConnectionTest.init('#test-connection-btn');
});
{{/js}}