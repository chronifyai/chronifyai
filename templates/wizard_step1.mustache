{{!
    @template local_chronifyai/wizard_step1

    ChronifyAI setup wizard - Welcome page (Step 1)

    Context variables:
    * step_title - The title for this step
    * step_description - The description text
    * next_url - URL to proceed to step 2
}}

<div class="chronifyai-text-content">
    <h1 class="chronifyai-wizard-title">
        {{#str}}wizard:step1:maintitle, local_chronifyai{{/str}}
    </h1>

    <p class="chronifyai-welcome-description">
        {{{step_description}}}
    </p>

    <div class="chronifyai-cta-section">
        <a href="{{next_url}}" class="chronifyai-btn-continue">
            {{#str}}wizard:step1:letssetup, local_chronifyai{{/str}}
        </a>
    </div>
</div>