{{!
    @template local_chronifyai/wizard_navigation

    Step indicator navigation for the wizard

    Example context (json):
    {
        "step": 1,
        "step1_url": "/local/chronifyai/index.php?step=1",
        "step2_url": "/local/chronifyai/index.php?step=2",
        "step3_url": "/local/chronifyai/index.php?step=3",
        "step4_url": "/local/chronifyai/index.php?step=4",
        "step1_active": true,
        "step2_active": false,
        "step3_active": false,
        "step4_active": false
    }
}}

<div class="chronifyai-wizard-header">
    <div class="chronifyai-wizard-steps">
        <a href="{{step1_url}}" class="chronifyai-step {{#step1_active}}active{{/step1_active}}">
            <span class="chronifyai-step-number">1</span>
            <span class="chronifyai-step-label">{{#str}}wizard:step1:nav, local_chronifyai{{/str}}</span>
        </a>

        <div class="chronifyai-step-connector"></div>

        <a href="{{step2_url}}" class="chronifyai-step {{#step2_active}}active{{/step2_active}}">
            <span class="chronifyai-step-number">2</span>
            <span class="chronifyai-step-label">{{#str}}wizard:step2:nav, local_chronifyai{{/str}}</span>
        </a>

        <div class="chronifyai-step-connector"></div>

        <a href="{{step3_url}}" class="chronifyai-step {{#step3_active}}active{{/step3_active}}">
            <span class="chronifyai-step-number">3</span>
            <span class="chronifyai-step-label">{{#str}}wizard:step3:nav, local_chronifyai{{/str}}</span>
        </a>

        <div class="chronifyai-step-connector"></div>

        <a href="{{step4_url}}" class="chronifyai-step {{#step4_active}}active{{/step4_active}}">
            <span class="chronifyai-step-number">4</span>
            <span class="chronifyai-step-label">{{#str}}wizard:step4:nav, local_chronifyai{{/str}}</span>
        </a>
    </div>
</div>
