{{!
    @template local_chronifyai/test_connection_block

    Test connection block for API credential validation

    Example context (json):
    {
        "testurl": "/local/chronifyai/test.php",
        "status": "success",
        "message": "Connection successful"
    }
}}

<div class="chronifyai-test-connection">
    <h4>{{#str}}wizard:step2:test:title, local_chronifyai{{/str}}</h4>
    <p>{{#str}}wizard:step2:test:description, local_chronifyai{{/str}}</p>

    <button type="button" class="chronifyai-btn-test" id="test-connection-btn"
            data-test-url="{{testurl}}">
        {{#str}}wizard:step2:test:button, local_chronifyai{{/str}}
    </button>

    <div id="test-result" class="chronifyai-test-result"></div>
</div>
