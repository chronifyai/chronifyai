{{!
    @template local_chronifyai/layout

    Main layout wrapper for the wizard pages.

    Example context (json):
    {
        "navigation": "<div>Navigation HTML</div>",
        "content": "<div>Main content HTML</div>",
        "backgroundimage": "https://example.com/bg.png"
    }
}}

<div class="chronifyai-wizard-container">
    <div class="chronifyai-wizard-content">
        {{{navigation}}}

        <div class="chronifyai-wizard-body">
            <div class="chronifyai-main-content">
                {{{content}}}

                {{#backgroundimage}}
                <div class="chronifyai-image-content">
                    <img src="{{backgroundimage}}" class="chronifyai-wizard-image" alt="{{#str}}wizard:common:background:alt, local_chronifyai{{/str}}">
                </div>
                {{/backgroundimage}}
            </div>
        </div>

        <div class="chronifyai-wizard-footer">
            <p class="chronifyai-copyright">{{#str}}wizard:common:copyright, local_chronifyai{{/str}}</p>
        </div>
    </div>
</div>
